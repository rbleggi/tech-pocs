FROM jenkins/agent:latest

USER root

# Install Docker CLI, OpenJDK 17, and Git
RUN apt-get update \
    && apt-get install -y docker.io openjdk-17-jdk git \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

ENV JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64
ENV PATH=$JAVA_HOME/bin:$PATH

USER jenkins
